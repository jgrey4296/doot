#  .envrc -*- mode: sh -*-
# See https://direnv.net/
# export VAR=VAL
# PATH_add val

# venv location
if [[ -z "$READTHEDOCS" ]]; then
    export UV_PROJECT_ENVIRONMENT="$PWD/.temp/venv"
else
    export UV_PROJECT_ENVIRONMENT="$READTHEDOCS_VIRTUALENV_PATH"
fi
if [[ -d "$UV_PROJECT_ENVIRONMENT" ]]; then
    source "$UV_PROJECT_ENVIRONMENT/bin/activate"
fi

# user local
PATH_add "$HOME/.local/bin"

# asdf
if [[ -e ".asdf.plugins" ]]; then
    echo "Adding ASDF Plugins"
    while read -r pname url; do
        if [[ -n "$pname" ]]; then
            asdf plugin add "$pname" "${url:-}"
        fi
    done < ".asdf.plugins"
fi
asdf install
asdf reshim

# For repo-local tasks
PATH_add "$PWD/.tasks"

# For polyglot glue
export POLYGLOT_ROOT="$PWD"
export POLYGLOT_SRC="doot"
export POLYGLOT_SPHINX_CONF_DIR="doot/_docs"
export TOWNCRIER_CHANGE_DIR="$PWD/doot/_docs/_changes"

# Pre-commit skipping:
# export SKIP=""
